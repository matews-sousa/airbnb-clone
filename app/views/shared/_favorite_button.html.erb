<% if signed_in? %>
  <%= turbo_frame_tag "#{dom_id(place)}_favorite" do %>
    <% if favorite.nil? %>
      <%= button_to favorites_path, params: { favorite: { place_id: place.id } }, method: :post do %>
        <svg class="w-8 h-8 text-black fill-current stroke-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>
      <% end %>
    <% else %>
      <%= button_to favorite_path(favorite), method: :delete do %>
        <svg class="w-8 h-8 text-red-500 fill-current stroke-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>
      <% end %>
    <% end %>
  <% end %>
<% end %>
