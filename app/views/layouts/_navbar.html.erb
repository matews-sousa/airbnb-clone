<nav class="border-b border-gray-300 py-4">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-4">
    <%= link_to root_path do %>
      <%= image_tag "/assets/airbnb-full.svg", alt: 'Airbnb', class: 'w-24 hidden lg:block' %>
      <%= image_tag "/assets/airbnb-icon.svg", alt: 'Airbnb', class: 'w-10 block lg:hidden' %>
    <% end %>
    <div data-controller="menu" class="relative">
      <button data-menu-target="button" data-action="click->menu#toggle keydown.esc->menu#close click@window->menu#close" class="border border-gray-300 hover:shadow-lg transition-all rounded-full flex items-center gap-3 py-1 px-2">
        <svg class="w-7 h-7" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
        <%= image_tag "/assets/default_pfp.jpg", class: 'w-9' %>
      </button>
      <ul
        data-menu-target="menu"
        class="hidden absolute z-10 ring-1 ring-gray-300 bg-white rounded-md shadow-lg mt-2 w-56 right-0 origin-top-right overflow-hidden" 
        role="menu"
        tabindex="-1"
      >
        <% if current_user %>
          <li>
            <%= link_to "Host a Place", new_place_path, class: 'text-gray-700 block px-4 py-3 text-sm hover:bg-gray-100' %>
          </li>
          <li>
            <%= link_to "Sign out", destroy_user_session_path, data: {'turbo-method': :delete}, class: 'text-red-400 block px-4 py-3 text-sm hover:bg-gray-100' %>
          </li>
        <% else %>
          <li>
            <%= link_to "Register", new_user_registration_path, class: 'text-gray-700 block px-4 py-3 text-sm hover:bg-gray-100' %>
          </li>
          <li>
            <%= link_to "Login", new_user_session_path, class: 'text-gray-700 block px-4 py-3 text-sm hover:bg-gray-100' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
