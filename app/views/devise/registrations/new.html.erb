<div class="flex items-center justify-center min-h-[80vh]">
  <div class="max-w-sm w-full">
    <h2 class="text-3xl font-semibold text-center mb-6">Register</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="space-y-4">
        <div class="flex flex-col">
          <%= f.label :email, class: 'font-medium mb-1'%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-2 py-2 rounded-md border border-gray-300 hover:border-gray-400 focus:outline-none focus:border-black #{'border-red-400' if resource.errors.full_messages_for(:email).first}" %>
          <p class="text-xs text-red-400 italic">
            <%= resource.errors.full_messages_for(:email).first %>
          </p>
        </div>
        <div class="flex flex-col">
          <%= f.label :password, class: 'font-medium mb-1'%>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-2 py-2 rounded-md border border-gray-300 hover:border-gray-400 focus:outline-none focus:border-black #{'border-red-400' if resource.errors.full_messages_for(:password).first}" %>
          <p class="text-xs text-red-400 italic">
            <%= resource.errors.full_messages_for(:password).first %>
          </p>
        </div>
        <div class="flex flex-col">
          <%= f.label :password_confirmation, class: 'font-medium mb-1'%>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-2 py-2 rounded-md border border-gray-300 hover:border-gray-400 focus:outline-none focus:border-black #{'border-red-400' if resource.errors.full_messages_for(:password_confirmation).first}" %>
          <p class="text-xs text-red-400 italic">
            <%= resource.errors.full_messages_for(:password_confirmation).first %>
          </p>
        </div>
      </div>
      <div class="my-4">
        <%= f.submit "Register", class: 'py-3 text-white font-semibold rounded-md bg-red-400 hover:bg-red-500 cursor-pointer w-full' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
