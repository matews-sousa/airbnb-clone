<%- if controller_name != 'sessions' %>
  <p class="text-center my-4">
    Already have an account? 
    <%= link_to "Log in", new_session_path(resource_name), class: 'underline text-blue-400 hover:text-blue-500' %>
  </p>
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-center my-4">
    Don't have an account? 
    <%= link_to "Register", new_registration_path(resource_name), class: 'underline text-blue-400 hover:text-blue-500' %>
  </p>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
<% end %>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
<% end %>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
<% end %>
<%- if devise_mapping.omniauthable? %>
  <div class="flex items-center justify-center gap-2 my-4">
    <div class="h-[0.5px] bg-gray-400 flex-1"></div>
    <span class="text-gray-700">or</span>
    <div class="h-[0.5px] bg-gray-400 flex-1"></div>
  </div>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'font-semibold p-2 bg-black hover:bg-neutral-900 text-white w-full rounded-md flex items-center justify-center gap-2' do %>
      <%= image_tag "/assets/#{provider}-logo.svg", class: 'w-8 h-8 stroke-white' %>
      <span><%= "Sign in with #{OmniAuth::Utils.camelize(provider)}" %></span>
    <% end %>
  <% end %>
<% end %>
